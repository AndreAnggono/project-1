<h1>Sign In</h1>

<% if flash[:error].present? %>
  <p class="error">
    <%= flash[:error] %>
  </p>
<% end %>

<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, :class => 'form-control', :autofocus => true %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control' %>
  </div>
  
  <%= submit_tag "Sign In", :class => 'btn btn-primary' %>
<% end %>
<p>Don't have an account?</p><%= link_to 'Signup', new_user_path %>