<%= form_for @review do |f| %>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.label :rating, "1", :value => "1"%>
    <%= f.radio_button :rating, "1"  %>
    <%= f.label :rating, "2", :value => "2" %>
    <%= f.radio_button :rating, "2" %>
    <%= f.label :rating, "3", :value => "3" %>
    <%= f.radio_button :rating, "3" %>
    <%= f.label :rating, "4", :value => "4" %>
    <%= f.radio_button :rating, "4" %>
    <%= f.label :rating, "5", :value => "5" %>
    <%= f.radio_button :rating, "5", :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_experience %>
    <%= f.date_field :date_of_experience, :required => true, :max => Date.today %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :required => true %>
  </div>
  <%= f.submit %>
<% end %>