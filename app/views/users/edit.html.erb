<h2 class="mt-5">Edit Profile</h2>

<% unless flash[:errors].nil? %>
  <ol>
    <% flash[:errors].each { |k,v| %>
      <li><%= "#{k.sub('_', ' ').titlecase} #{v.first.titlecase}" %></li>
    <% }%>
  </ol>
<% end %>

<%= form_for @user do |f| %>
    <div class="form-group mb-2">
        <%= f.label :username, :class => 'form-label' %>
        <%= f.text_field :username, :autofocus => true, :required => true, :class => 'form-control' %>
    </div>
    <div class="form-group mb-2">
      <%= f.label :avatar, :class => 'form-label' %>
      <%= f.text_field :avatar, :class => 'form-control' %>
     </div>
    <div class="form-group mb-2">
      <%= f.label :first_name, :class => 'form-label' %>
      <%= f.text_field :first_name, :class => 'form-control' %>
     </div>
    <div class="form-group mb-2">
      <%= f.label :last_name, :class => 'form-label' %>
      <%= f.text_field :last_name, :class => 'form-control' %>
     </div>
    <div class="form-group mb-2">
      <%= f.label :email, :class => 'form-label' %>
      <%= f.email_field :email, :required => true, :class => 'form-control' %>
     </div>
    <div class="form-group mb-2">
      <%= f.label :city, :class => 'form-label' %>
      <%= f.text_field :city, :class => 'form-control' %>
     </div>
    <div class="form-group mb-2">
      <%= f.label :password, :class => 'form-label' %>
      <%= f.password_field :password, :class => 'form-control' %>
     </div>
    <div class="form-group mb-2">
      <%= f.label :password_confirmation, :class => 'form-label' %>
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
     </div>
     <div class="row mt-4">
      <div class="col">
        <%= f.submit 'Update Profile', :class => 'btn btn-primary w-100 ' %>
      </div>
      
  <% end %>
      <div class="col">
        <%= button_to "Delete Profile", @user, :method => 'delete', :class => 'btn btn-danger w-100', :data => {:confirm => "Are you sure you want to delete this profile?"}  %>  
      </div>
    </div>
  

