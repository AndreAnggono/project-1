<h2>Edit Profile</h2>

<% unless flash[:errors].nil? %>
  <ol>
    <% flash[:errors].each { |k,v| %>
      <li><%= "#{k.sub('_', ' ').titlecase} #{v.first.titlecase}" %></li>
    <% }%>
  </ol>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :avatar %>
  <%= f.text_field :avatar %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit 'Update Profile' %>
<% end %>

<%= button_to "Delete Profile", @user, :method => 'delete'  %>